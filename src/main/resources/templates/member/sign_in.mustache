{{>layout/header}}
<form action="/member/signIn" method="post" name="signIn">
    <div>
        <label for="id">ID</label>
        <input type="text" name="id" placeholder="아이디를 입력하세요">
        <label for="password">PASSWORD</label>
        <input type="password" name="password" placeholder="비밀번호를 입력하세요">
    </div>
    <div>
        <input type="submit" value="로그인" id="btn-signIn" class="button big special">
        <input type="button" value="회원가입" onclick="location.href='/member/signUp'" class="button big alt">
        <input type="button" value="HOME" onclick="location.href='/'" class="button big alt">
    </div>
</form>


{{>layout/footer}}